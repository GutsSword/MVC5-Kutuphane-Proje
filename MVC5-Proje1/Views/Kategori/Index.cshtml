@using MVC5_Proje1.Models.Entity
@model  List<TBL_Kategori>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2>KATEGORİLER</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori Adı</th>
        <th></th>
    </tr>

    @foreach (var x in Model)
    {
    <tr>
        <td>@x.Kategoriid</td>
        <td>@x.Ad</td>
        <td><a href="/Kategori/KategoriSil/@x.Kategoriid" class="btn btn-danger">Sil</a></td>
        <td><a href="/Kategori/KategoriGetir/@x.Kategoriid" class="btn btn-primary">Güncelle</a></td>
    </tr>

    }
</table>
<a href="/Kategori/KategoriEkle" class="btn btn-primary">Kategori Ekle</a>