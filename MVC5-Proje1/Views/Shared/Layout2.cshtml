
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: "Lato", sans-serif;
        }

        .sidebar {
            height: 100%;
            width: 200px;
            position: fixed;
            z-index: 1;
            top: 0;
            left: 0;
            background-color: #111;
            overflow-x: hidden;
            padding-top: 30px;
        }

            .sidebar a {
                padding: 10px 8px 6px 20px;
                text-decoration: none;
                font-size: 16px;
                color: #818181;
                display: block;
            }

                .sidebar a:hover {
                    color: rgb(250, 99, 29);
                }

        .main {
            margin-left: 200px; /* Same as the width of the sidenav */
            padding: 0px 10px;
        }

        @@media screen and (max-height: 450px) {
            .sidebar {
                padding-top: 15px;
            }

                .sidebar a {
                    font-size: 18px;
                }
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <a href="#home"><i class="fa fa-fw fa-home"></i> Ana Sayfa</a>
        <a href="/Kategori/Index"><i class="glyphicon glyphicon-list"></i>&nbsp;Kategoriler</a>
        <a href="/Kitap/Index"><i class="glyphicon glyphicon-book "></i>&nbsp;Kitaplar</a>
        <a href="/Uye/Index"><i class="glyphicon glyphicon-user"></i>&nbsp;Üyeler</a>
        <a href="#contact"><i class="glyphicon glyphicon-paperclip"></i>&nbsp;Cezalar</a>
        <a href="/Personel/Index"><i class="glyphicon glyphicon-paperclip"></i>&nbsp;Personeller</a>
        @*@if (User.IsInRole("A"))*@
        <a href="/Odunc/OduncVer"><i class="glyphicon glyphicon-circle-arrow-right"></i>&nbsp;Ödünç Kitap Ver</a>
        <a href="/Odunc/Index"><i class="glyphicon glyphicon-circle-arrow-right"></i>&nbsp;Ödünç Kitap Al</a>
        <a href="/islem/Index"><i class="glyphicon glyphicon-print"></i>&nbsp;İşlemler</a>
        <a href="/istatistik/Index"><i class="glyphicon glyphicon-tasks"></i>&nbsp;İstatistikler</a>
        <a href="/istatistik/Linqkart"><i class="glyphicon glyphicon-tasks"></i>&nbsp;Linq Kartlar</a>
        <a href="/Duyuru/Index"><i class="glyphicon glyphicon-volume-up"></i>&nbsp;Duyurular</a>
        <a href="/Yazarlar/Index/"><i class="glyphicon glyphicon-pencil"></i>&nbsp;Yazarlar</a>
        <a href="/Vitrin/Index/"><i class="glyphicon glyphicon-book"></i>&nbsp;Vitrin</a>
        <a href="/Ayarlar/Index/"><i class="glyphicon glyphicon-cog"></i>&nbsp;Ayarlar</a>
        <a href="/Grafik/Index/"><i class="glyphicon glyphicon-flag"></i>&nbsp;Chartlar</a>
        <a href="/Panelim/LogOut/"><i class="glyphicon glyphicon-eye-close"></i>&nbsp;Çıkış Yap</a>

    </div>

    <div class="main">
        @RenderBody()     @*MAİN CLASSININ İÇİNE RENDER BODY EKLENİR.*@
    </div>

</body>
</html>

