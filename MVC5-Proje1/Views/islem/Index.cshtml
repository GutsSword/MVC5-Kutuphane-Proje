@using MVC5_Proje1.Models.Entity
@model List<TBL_Hareket >
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout2.cshtml";
}

<h2>İadesi Alınan Kitaplar listesi</h2>

<form method="post">
<table class="table table-bordered">
    <tr>
        <th>HAREKET ID</th>
        <th>KİTAP ADI</th>
        <th>ALAN KİŞİ</th>
        <th>PERSONEL</th>
        <th>ALIŞ TARİHİ</th>
        <th>ÜYE İADE TARİHİ</th>
        <th></th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.Hareketid</td>
            <td>@x.TBL_Kitap.Kitapad</td>
            <td>@x.TBL_Uye.Uyead &nbsp; @x.TBL_Uye.Uyesoyad</td>
            <td>@x.TBL_Personel.PersonelAdSoyad</td>
            <td>@Convert.ToDateTime(x.AlısTarihi).ToString("dd/MM/yyyy")</td>
            <td>@Convert.ToDateTime(x.uyegetirtarih).ToString("dd/MM/yyyy")</td>
            
        </tr>
    }
</table>
</form>
